    :
}

vm_sysrq_kvm() {
    perl -e 'use Socket; socket(SOCK, PF_UNIX, SOCK_STREAM, 0) || die("socket: $!\n"); 
             connect(SOCK, sockaddr_un($ARGV[0])) || die("connect: $!\n");
             syswrite(SOCK, "$ARGV[1]\n");
             shutdown(SOCK, 1);
             my $output;
             read(SOCK, $output, 8192);' "$VM_ROOT.qemu/monitor" "alt-print-$1"
}

vm_wipe_kvm() {
    :
}
